{% macro joueur(rank, competiteur, nbJoueurs, brulages, idJournee, nbCompo, selectedPlayers, j2Rule, numEquipe) %}
    <tr>
        <td class="rank{% if nbJoueurs % 3 == 0 and rank >= 3 and rank < 6 %} rank_blue {% endif %}">
            <b>Joueur {{ rank + 1 }}</b>
            {% if nbCompo and competiteur and idJournee == 2 and j2Rule and isBrulesJ2(numEquipe, competiteur.idCompetiteur, selectedPlayers, brulages) %}
                <i class="material-icons red-text tooltipped" data-position="top" data-html="true" data-tooltip="<b>Règle brûlage J2 :</b> au plus 1 joueur ayant joué <br> au-dessus de la {{ numEquipe }} en J1 peut être sélectionné">report_problem</i>
            {% endif %}
        </td>
        <td>
            {% if competiteur is not null %}
                <span class="new badge light-blue darken-3" data-badge-caption="pts">{{ competiteur.classementOfficiel }}</span>
            {% else %}
                <span>&nbsp</span>
            {% endif %}
        </td>
            {% if competiteur is not null %}
                <td>
                    <div class="chip">
                        {% if competiteur.avatar %}
                            <img src="{{ vich_uploader_asset(competiteur, 'imageFile') }}" alt="Avatar">
                        {% else %}
                            <img src="{{ asset('images/account.png') }}" alt="Avatar">
                        {% endif %}
                        <span>{{ competiteur.nom }} {{ competiteur.prenom }}</span>
                    </div>
                </td>
            {% else %}
                <td style="height: 75px;" class="grey-text text-lighten-1 center-align">Emplacement vide</td>
            {% endif %}
        <td>
            {% if competiteur is not null %}
                {{ competiteur.licence }}
            {% else %}
                <span>&nbsp</span>
            {% endif %}
        </td>
        <td>
            {% if competiteur is not null %}
                {% if competiteur.isCapitaine %}
                    <span class="new badge blue" data-badge-caption="Capitaine"></span>
                {% else %}
                    <span class="new badge green" data-badge-caption="Joueur"></span>
                {% endif %}
            {% else %}
                <span>&nbsp</span>
            {% endif %}
        </td>
    </tr>
{% endmacro %}