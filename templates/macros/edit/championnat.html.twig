{% macro edit(form, btnText) %}
    <style>
        li {
            color: red;
        }
    </style>

    <div class="card-panel center-align">
        <h4 class="h4_form">{{ btnText }} un championnat</h4>

        {{ form_start(form) }}
            <div class="row">
                <div class="col s12 m6">
                    <span><i class="material-icons prefix">short_text</i> Nom</span>
                    {{ form_row(form.nom) }}
                </div>
                <div class="col s12 m3">
                    <span><i class="red-text material-icons prefix">whatshot</i> Limite du brûlage</span>
                    {{ form_row(form.limiteBrulage) }}
                </div>

                <div class="col s12 m3">
                    <span><i class="red-text material-icons prefix">whatshot</i> Nombre de journées</span>
                    {{ form_row(form.nbJournees) }}
                </div>
            </div>

            <div class="row">
                <div class="col s12">
                    <span>Règle de la J2 appliquée ?</span><br>
                    <div style="margin-top: 15px;">{{ form_row(form.j2Rule) }}</div>
                </div>
            </div>

            <br>
            <a href="{{ path('back_office.championnats') }}" class="btn waves-effect waves-light grey btn_gestion">Annuler</a>
            <button class="btn btn_form waves-effect waves-light light-blue darken-1">{{ btnText }}</button>
        {{ form_end(form) }}
    </div>
{% endmacro %}