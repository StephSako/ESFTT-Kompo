{% macro table(journees) %}
    {% if journees|length %}
        <table class="striped centered">
            <thead>
                <tr>
                    <th>Journée n°</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for journee in journees %}
                    <tr>
                        <td>
                            <b>{{ loop.index }}</b>
                        </td>
                        <td>
                            {% if journee.undefined %} <span class="red-text">Date indéfinie</span>
                            {% else %} {{ journee.dateJournee|format_datetime('long', 'none', locale='fr')|title }}
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('backoffice.journee.edit', {idJournee: journee.idJournee}) }}"
                               class="btn waves-effect blue lighten-2 btn_gestion">
                                <i class="material-icons">edit</i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="lobster_2 missingTitle">Aucune journée enregistrée</p>
    {% endif %}
{% endmacro %}