{% macro table(journees, type) %}
    {% if journees|length > 0 %}
        <table class="striped centered">
            <thead>
                <tr>
                    <th>Journée n°</th>
                    <th>Date</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for journee in journees %}
                    <tr>
                        <td>{{ journee.idJournee }}</td>
                        <td>
                            {% if journee.undefined %} <span class="red-text">Indéterminée</span>
                            {% else %} {{ journee.date|format_datetime('long', 'none', locale='fr') }}
                            {% endif %}
                        </td>
                        <td><a href="{{ path('backoffice.journee.edit', {idJournee: journee.idJournee, type: type}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion"><i class="material-icons">edit</i></a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="lobster_2" style="font-size: 20px;">Il n'y a pas de journées enregistrées.</p>
    {% endif %}
{% endmacro %}