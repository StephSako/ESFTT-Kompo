{% macro table(equipes, type) %}
    <table class="striped centered">
        <thead>
            <tr>
                <th>Equipe</th>
                <th>Division</th>
                <th>Poule</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {% for equipe in equipes %}
                <tr>
                    <td>{{ equipe.idEquipe }}</td>
                    <td>
                        {% if equipe.division %}
                            {{ equipe.division.longName }}
                        {% else %}
                            <span class="red-text lighten-2">Indéfinie</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if equipe.poule %}
                            {{ equipe.poule.poule }}
                        {% else %}
                            <span class="red-text lighten-2">Indéfinie</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('backoffice.equipe.edit', {type: type, idEquipe: equipe.idEquipe}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion">
                            <i class="material-icons">edit</i>
                        </a>
                    </td>
                    <td>
                        <form method="post" action="{{ path('backoffice.equipe.delete', {type: type, idEquipe: equipe.idEquipe}) }}" onsubmit="return confirm('Etes-vous sûr de supprimer l\'équipe ?')">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.idEquipe) }}">
                            <button class="btn waves-effect waves-light red lighten-2 btn_gestion">
                                <i class="material-icons">delete</i>
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endmacro %}