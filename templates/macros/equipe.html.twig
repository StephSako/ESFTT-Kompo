{% macro table(equipes) %}
    {% if equipes|length > 0 %}
        <table class="striped centered">
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Division</th>
                    <th>Poule</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                {% for equipe in equipes %}
                    <tr>
                        <td>
                            <b>{{ equipe.numero }}</b>
                        </td>
                        <td>
                            {% if equipe.divShortName %}
                                {{ equipe.divShortName }}
                            {% else %}
                                <span class="red-text lighten-2">Division indéfinie</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if equipe.poule %}
                                {{ equipe.poule }}
                            {% else %}
                                <span class="red-text lighten-2">Poule indéfinie</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('backoffice.equipe.edit', {idEquipe: equipe.idEquipe}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion">
                                <i class="material-icons">edit</i>
                            </a>
                        </td>
                        <td>
                            <form method="post" action="{{ path('backoffice.equipe.delete', {idEquipe: equipe.idEquipe}) }}" onsubmit="return confirm('Êtes-vous sûr de supprimer l\'équipe ?')">
                                <input type="hidden" name="_method" value="DELETE">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipe.idEquipe) }}">
                                <button class="btn waves-effect waves-light red lighten-2 btn_gestion">
                                    <i class="material-icons">delete</i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="lobster_2" style="font-size: 20px;">Aucune équipe valide enregistrée</p>
    {% endif %}
{% endmacro %}