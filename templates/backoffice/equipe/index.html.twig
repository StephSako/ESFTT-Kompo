{% extends 'base.html.twig' %}

{% block title %}Back-office - Les équipes{% endblock %}
{% import 'macros/flash.html.twig' as _flash %}
{% import 'macros/equipe.html.twig' as _equipe %}

{% block body %}

    {{ include("components/navbar_backoffice.html.twig") }}

    <div class="container">

        {% for message in app.flashes('success') %}
            {{ _flash.message(message, 'green') }}
        {% endfor %}

        {% for message in app.flashes('fail') %}
            {{ _flash.message(message, 'red') }}
        {% endfor %}

        <div class="card-panel center-align white-text title_journee">
            <h4>Les équipes</h4>
        </div>

        <ul class="tabs tabs-fixed-width tab-demo z-depth-1">
            <li class="tab"><a href="#equipes_departementales" class="active">Départemental</a></li>
            <li class="tab"><a href="#equipes_paris">Paris</a></li>
        </ul>

        <div class="card-panel center" id="equipes_departementales">
            <a style="margin-bottom: 20px;" href="{{ path('backoffice.equipe.new', {type: 'departementale'}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion hide-on-small-only">Créer une équipe départementale</a>
            <a style="margin-bottom: 20px; font-size: 85%;" href="{{ path('backoffice.equipe.new', {type: 'departementale'}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion hide-on-med-and-up">Créer une équipe départementale</a>
            {{ _equipe.table(equipesDepartementales, 'departementale') }}
        </div>

        <div class="card-panel center" id="equipes_paris">
            <a style="margin-bottom: 20px;" href="{{ path('backoffice.equipe.new', {type: 'paris'}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion">Créer une équipe Paris</a>
            {{ _equipe.table(equipesParis, 'paris') }}
        </div>
    </div>

{% endblock %}