{% if disponibiliteBoolean == 1 %}
    <p style="margin-top: 5px; margin-bottom: 5px;"><i>Joueur <span class="green-text"><b>disponible</b></span></i></p>
    <button onclick="updateDisponibilite('{{ idCompetiteur }}', '{{ idDisponibilite }}', 0, '{{ idJournee }}')" class="btn waves-effect red btn_gestion" type="submit" name="action">Déclarer indisponible</button>
{% else %}
    <p style="margin-top: 5px; margin-bottom: 5px;"><i>Joueur <span class="red-text"><b>indisponible</b></span></i></p>
    <button onclick="updateDisponibilite('{{ idCompetiteur }}', '{{ idDisponibilite }}', 1, '{{ idJournee }}')" class="btn waves-effect green btn_gestion" type="submit" name="action">Déclarer disponible</button>
{% endif %}