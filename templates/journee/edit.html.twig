{% extends 'base.html.twig' %}
{% form_theme form 'components/materialize_form_theme.html.twig' %}
{% import 'macros/flash.html.twig' as _flash %}
{% import 'macros/brulages.html.twig' as _brulage %}

{% block title %}J{{ compo.idJournee.idJournee }} - Equipe {{ compo.idEquipe.idEquipe }}{% endblock %}

{% block body %}

    {% include("components/navbar.html.twig") %}

    {% if stillEditable(compo.idJournee) %}
        <div class="row main">
            <div class="col l2 hide-on-small-only">
                {{ _brulage.joueursBrules(type, joueursBrules, compo.idEquipe.idEquipe) }}
            </div>

            <div class="col s12 m7">

                {% for message in app.flashes('fail') %}
                    {{ _flash.message(message, 'red') }}
                {% endfor %}

                <div class="center-align card-panel">

                    {% if compo.idJournee.linkType == 'paris' and compo.idEquipe.idDivision is null and 'ROLE_CAPITAINE' in app.token.roleNames %}
                        <p class="orange-text text-darken-4" style="margin-top: 0;">
                            Le nombre correct de joueurs sera mis à jour lorsque la division de l'équipe sera renseignée <a href="{{ path('backoffice.equipe.edit', {idEquipe: compo.idEquipe.idEquipe, type: compo.idJournee.linkType}) }}">ici</a>
                        </p>
                    {% endif %}

                    <h4 class="hide-on-small-only" style="margin-bottom: 15px; margin-top: 0;">Journée {{ compo.idJournee.idJournee }} - Équipe {{ compo.idEquipe.idEquipe }}</h4>
                    <h4 class="hide-on-med-and-up" style="margin-bottom: 15px; margin-top: 0;">J{{ compo.idJournee.idJournee }} - Équipe {{ compo.idEquipe.idEquipe }}</h4>

                    <div class="row header_compo">
                        {% if compo.hosted %}<span style="margin-top: 0; margin-bottom: 4px;" class="col s12 orange-text"><i class="material-icons">error_outline</i>Salle indisponible : rencontre à Herblay</span>{% endif %}

                        {% if compo.adversaire is null %}
                            <h5 class="col s12 m5 hide-on-med-and-up lobster_2 red-text">Adversaire indéfini</h5>
                        {% else %}
                            <h5 class="col s12 m5 hide-on-med-and-up lobster_2">{{ compo.adversaire | title }}</h5>
                        {% endif %}

                        <div class="col s4 m2">
                            <h5>
                                {% if compo.idEquipe.idDivision %}
                                    <span class="white-text bulle">{% if compo.idEquipe.idDivision.shortName|length == 1 %}&thinsp;{% endif %}{{ compo.idEquipe.idDivision.shortName }}{% if compo.idEquipe.idDivision.shortName|length == 1 %}&thinsp;{% endif %}</span><br>
                                {% else %}
                                    <span class="red-text bulle">&thinsp;&thinsp;?&thinsp;&thinsp;</span><br>
                                {% endif %}
                            </h5>
                            <p class="poule" style="margin-bottom: 0;">
                                Poule
                                {% if compo.idEquipe.idPoule %}
                                    <span style="font-size: 95%; font-family: 'Lora', serif;">{{ compo.idEquipe.idPoule.poule }}</span>
                                {% else %}
                                    <span class="red-text" style="font-size: 95%; font-family: 'Lora', serif;">?</span>
                                {% endif %}
                            </p>
                        </div>

                        {% if compo.idJournee.undefined %}
                            <h5 class="col s4 m3 red-text">?/?</h5>
                        {% else %}
                            <h5 class="col s4 m3 lobster_2">{{ compo.idJournee.date|date('d/m') }}</h5>
                        {% endif %}

                        <h5 class="col s4 m2">
                            {% if compo.domicile %} <i style="font-size: 2.1rem;" class="{% if compo.hosted %}orange-text{% else %}green-text{% endif%} material-icons">home</i>
                            {% else %} <i style="font-size: 2.1rem;" class="green-text material-icons">directions_car</i>
                            {% endif %}
                        </h5>

                        {% if compo.adversaire is null %}
                            <h5 class="hide-on-small-only col s12 m5 red-text">Adversaire indéfini</h5>
                        {% else %}
                            <h5 class="hide-on-small-only col s12 m5 lobster_2">{{ compo.adversaire | title }}</h5>
                        {% endif %}
                    </div>

                        {{ form_start(form)}}
                            <div class="form_div_list">
                                <div class="row">
                                    <div class="col s12 m3"><h5>Joueur 1</h5></div>
                                    <div class="col s12 m9">{{ form_row(form.idJoueur1) }}</div>
                                </div>
                                <div class="row">
                                    <div class="col s12 m3"><h5>Joueur 2</h5></div>
                                    <div class="col s12 m9">{{ form_row(form.idJoueur2) }}</div>
                                </div>
                                <div class="row">
                                    <div class="col s12 m3"><h5>Joueur 3</h5></div>
                                    <div class="col s12 m9">{{ form_row(form.idJoueur3) }}</div>
                                </div>

                                {% if (compo.idJournee.linkType == 'departementale') or (compo.idJournee.linkType == 'paris' and (compo.idEquipe.idDivision is null or compo.idEquipe.idDivision.nbJoueursChampParis > 3)) %}
                                    <div class="row">
                                        <div class="col s12 m3{% if compo.idJournee.linkType == 'paris' %} light_blue{% endif %}"><h5>Joueur 4</h5></div>
                                        <div class="col s12 m9">{{ form_row(form.idJoueur4) }}</div>
                                    </div>
                                {% endif %}

                                {% if compo.idJournee.linkType == 'paris' %}
                                    {% if compo.idEquipe.idDivision is null or compo.idEquipe.idDivision.nbJoueursChampParis > 3 %}
                                        <div class="row">
                                            <div class="col s12 m3 light_blue"><h5>Joueur 5</h5></div>
                                            <div class="col s12 m9">{{ form_row(form.idJoueur5) }}</div>
                                        </div>

                                        <div class="row">
                                            <div class="col s12 m3 light_blue"><h5>Joueur 6</h5></div>
                                            <div class="col s12 m9">{{ form_row(form.idJoueur6) }}</div>
                                        </div>
                                    {% endif %}
                                    {% if compo.idEquipe.idDivision is null or compo.idEquipe.idDivision.nbJoueursChampParis > 6 %}
                                        <div class="row">
                                            <div class="col s12 m3"><h5>Joueur 7</h5></div>
                                            <div class="col s12 m9">{{ form_row(form.idJoueur7) }}</div>
                                        </div>

                                        <div class="row">
                                            <div class="col s12 m3"><h5>Joueur 8</h5></div>
                                            <div class="col s12 m9">{{ form_row(form.idJoueur8) }}</div>
                                        </div>

                                        <div class="row">
                                            <div class="col s12 m3"><h5>Joueur 9</h5></div>
                                            <div class="col s12 m9">{{ form_row(form.idJoueur9) }}</div>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                        <br>
                        <a href="{{ path("journee.show", {type: type, id: compo.idJournee.idJournee}) }}" class="btn waves-effect waves-light grey btn_gestion">Annuler</a>
                        <button class="btn btn_form waves-effect waves-light blue lighten-2">Confirmer</button><br>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="col s12 m3 hide-on-small-only">
                {{ _brulage.selectionnables(type, futursSelectionnes, compo.idEquipe.idEquipe, compo.idJournee.idJournee, nbEquipes) }}
            </div>
            <div class="col s12 hide-on-med-and-up">
                {{ _brulage.joueursBrules(type, joueursBrules, compo.idEquipe.idEquipe) }}
            </div>

            <div class="col s12 hide-on-med-and-up">
                {{ _brulage.selectionnables(type, futursSelectionnes, compo.idEquipe.idEquipe, compo.idJournee.idJournee, nbEquipes) }}
            </div>
            
        </div>
    {% else %}
        <div class="container center">
            <div class="card-panel red white-text title_journee" style="margin-top: 30px; margin-bottom: 0;">
                <h5>Cette rencontre n'est pas modifiable</h5>
            </div>

            <a href="{{ path('journee.show', {id: compo.idJournee.idJournee, type: compo.idJournee.linkType}) }}">
                <button class="btn waves-effect blue lighten-2 waves-light center">Retour à l'accueil</button>
            </a>
        </div>
    {% endif %}

{% endblock %}