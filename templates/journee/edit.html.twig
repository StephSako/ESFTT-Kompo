{% extends 'base.html.twig' %}

{% block title %}Journee 1{% endblock %}

{% block body %}

    {% include("components/navbar.html.twig") %}

    <div class="container">
        <div class="center-align card-panel">

            <h4>Modifier la composition</h4>
                <h5>Equipe n° {{ compo.idEquipe }} - Journée n°{{ compo.idJournee.nJournee }} - {{ compo.idJournee.date | date("m/d/Y")}} - {{ compo.idJournee.lieu }}</h5>
            <div class="container">
                {{ form_start(form)}}
                <div class="row">
                    <div class="col s6"><h5>Joueur 1</h5></div>
