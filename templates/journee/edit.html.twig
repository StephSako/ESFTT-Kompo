                </div>
                <div class="row">
                    <div class="col s6"><h5>Joueur 2</h5></div>
                    <div class="col s6">{{ form_row(form.idJoueur2) }}</div>
                </div>
                <div class="row">
                    <div class="col s6"><h5>Joueur 3</h5></div>
                    <div class="col s6">{{ form_row(form.idJoueur3) }}</div>
                </div>
                <div class="row">
                    <div class="col s6"><h5>Joueur 4</h5></div>
                    <div class="col s6">{{ form_row(form.idJoueur4) }}</div>
                </div>
                    <br><button class="btn waves-effect waves-light blue lighten-2">Modifier</button><br>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}