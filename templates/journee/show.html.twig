{% extends 'base.html.twig' %}

{% block title %}Journee {{ journee.idJournee}}{% endblock %}

{% block body %}

    {% include("components/navbar.html.twig") %}

    <div class="row">
        <div class="col s3">
            <table class="centered highlight card-panel dispos">
                <thead>
                <tr>
                    <th><h5>Brûlages</h5></th>
                    <th><h5>1</h5></th>
                    <th><h5>2</h5></th>
                    <th><h5>3</h5></th>
                    <th><h5>4</h5></th>
                </tr>
                </thead>

                <tbody>
                {% for joueurBrule in joueursBrules %}
                    <tr>
                        <td>{{ joueurBrule.nom }}</td>
                        <td>
                            {% if 1 in joueurBrule.FirstBurntTeam["almost"] %}
                                <i class="orange-text lighten-1 material-icons">do_not_disturb_on</i>
                            {% endif %}</td>
                        <td>
                            {% if 2 in joueurBrule.FirstBurntTeam["burnt"] %}
                                <i class="red-text lighten-1 material-icons">do_not_disturb_on</i>
                            {% elseif 2 in joueurBrule.FirstBurntTeam["almost"] %}
                                <i class="orange-text lighten-1 material-icons">do_not_disturb_on</i>
                            {% endif %}
                        </td>
                        <td>
                            {% if 3 in joueurBrule.FirstBurntTeam["burnt"] %}
                                <i class="red-text lighten-1 material-icons">do_not_disturb_on</i>
                            {% elseif 3 in joueurBrule.FirstBurntTeam["almost"] %}
                                <i class="orange-text lighten-1 material-icons">do_not_disturb_on</i>
                            {% endif %}
                        </td>
                        <td>
                            {% if 4 in joueurBrule.FirstBurntTeam["burnt"] %}
                                <i class="red-text lighten-1 material-icons">do_not_disturb_on</i>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="col s6">
            <div class="card-panel center-align white-text title_journee">
                <h4>Journée {{ journee.nJournee }} - {{ journee.date|date('d/m') }}</h4>
            </div>

            {% if app.user %}
                <div class="card-panel center">

                    <h5>Etes-vous disponible pour cette journée ?</h5>

                    {% if disposJoueur is empty %}
                        <p><i>Vous n'avez pas encore partagé votre disponibilité</i></p>
                        <a href="{{ path('journee.disponibilite.new', {journee: journee.idJournee, dispo: 1}) }}">
                            <button class="btn waves-effect green lighten-2 waves-light" type="submit" name="action">Se déclarer disponible</button>
                        </a>
                        <a href="{{ path('journee.disponibilite.new', {journee: journee.idJournee, dispo: 0}) }}">
                            <button class="btn waves-effect red lighten-2 waves-light" type="submit" name="action">Se déclarer indisponible</button>
                        </a>
                    {% elseif not disposJoueur[0].disponibilite  %}
                        <p>Vous vous êtes inscrit comme étant <span class="red-text lighten-3"><b>indisponible</b></span></p>
                        <a href="{{ path('journee.disponibilite.update', {journee: journee.idJournee, disposJoueur: disposJoueur[0].idDisponibilite, dispo: 1}) }}">
                            <button class="btn waves-effect green lighten-2 waves-light" type="submit" name="action">Se déclarer disponible</button>
                        </a>
                    {% elseif disposJoueur[0].disponibilite %}
                        <p>Vous vous êtes inscrit comme étant <span class="green-text lighten-3"><b>disponible</b></span></p>
                        <a href="{{ path('journee.disponibilite.update', {journee: journee.idJournee, disposJoueur: disposJoueur[0].idDisponibilite, dispo: 0}) }}">
                            <button class="btn waves-effect red lighten-2 waves-light" type="submit" name="action">Se déclarer indisponible</button>
                        </a>
                    {% endif %}
                </div>
            {% else %}
                <div class="card-panel green lighten-4 center">
                    <p>Vous devez vous connecter pour indiquer votre disponibilité pour cette journée.</p>
                    <a href="{{ path('login') }}">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Se connecter</button>
                    </a>
                </div>
            {% endif %}

            {% for compo in compos %}
                <div class="card-panel center">
                    <div class="row">
                        <h5 class="col s6">Team {{ compo.idEquipe }}</h5>
                        <h5 class="col s6">{{ compo.lieu }}</h5>
                    </div>
                    <table class="centered">
                        <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="rank"><b>#1</b></td>
                            <td>
                                {% if compo.idJoueur1 is not null %}
                                    {{ compo.idJoueur1.license }}
                                {% endif %}
                            </td>
                            <td>
                                {% if compo.idJoueur1 is not null %}
                                    {{ compo.idJoueur1.nom }} {% if compo.idJoueur1.role == "C" %}<span class="new badge blue" data-badge-caption="Capitaine"></span>{% endif %}
                                {% endif %}
                            </td>
                        </tr>

                        <tr>
                            <td class="rank"><b>#2</b></td>
                            <td>
                                {% if compo.idJoueur2 is not null %}
                                    {{ compo.idJoueur2.license }}
                                {% endif %}
                            </td>
                            <td>
                                {% if compo.idJoueur2 is not null %}
                                    {{ compo.idJoueur2.nom }} {% if compo.idJoueur2.role == "C" %}<span class="new badge blue" data-badge-caption="Capitaine"></span>{% endif %}
                                {% endif %}
                            </td>
                        </tr>

                        <tr>
                            <td class="rank"><b>#3</b></td>
                            <td>
                                {% if compo.idJoueur3 is not null %}
                                    {{ compo.idJoueur3.license }}
                                {% endif %}
                            </td>
                            <td>
                                {% if compo.idJoueur3 is not null %}
                                    {{ compo.idJoueur3.nom }} {% if compo.idJoueur3.role == "C" %}<span class="new badge blue" data-badge-caption="Capitaine"></span>{% endif %}
                                {% endif %}
                            </td>
                        </tr>

                        <tr>
                            <td class="rank"><b>#4</b></td>
                            <td>
                                {% if compo.idJoueur4 is not null %}
                                    {{ compo.idJoueur4.license }}
                                {% endif %}
                            </td>
                            <td>
                                {% if compo.idJoueur4 is not null %}
                                    {{ compo.idJoueur4.nom }} {% if compo.idJoueur4.role == "C" %}<span class="new badge blue" data-badge-caption="Capitaine"></span>{% endif %}
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>

                    {% if 'ROLE_CAPITAINE' in app.token.roleNames %}
                        <a href="{{ path('journee.edit', {id: compo.id}) }}"
                           class="btn waves-effect waves-light blue lighten-2">Modifier la compo
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        <div class="col s3">
            <table class="centered highlight card-panel dispos">
                <thead>
                    <tr>
                        <th><h5>Les dispos</h5></th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                {% for dispo in dispos %}
                    <tr>
                        <td>
                            <span class="{% if dispo.disponibilite %} green-text lighten-3 {% elseif not dispo.disponibilite %} red-text lighten-3 {% endif %}">{{ dispo.idCompetiteur.nom }}</span>
                        </td>
                        <td>
                            {% for joueurs in selectedPlayers %}
                                {% if dispo.idCompetiteur.idCompetiteur in joueurs %}
                                    <i class="blue-text right-align darken-1 material-icons">playlist_add_check</i>
                                {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                {% for dispoNonDeclaree in joueursNonDeclares %}
                    <tr>
                        <td>
                            <span class="grey-text lighten-3">{{ dispoNonDeclaree.nom }}</span>
                        </td>
                        <td>
                            {% for joueurs in selectedPlayers %}
                                {% if dispoNonDeclaree.id_competiteur in joueurs %}
                                    <i class="blue-text darken-1 material-icons">playlist_add_check</i>
                                {% endif %}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
