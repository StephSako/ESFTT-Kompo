{% extends 'base.html.twig' %}

{% block title %}Journee 1{% endblock %}

{% block body %}

    <div class="row">
        <div class="col s1"></div>
        <div class="col s9">
            <div class="center titre">
                <h2 class="titre_txt">Journée {{ app.request.pathinfo | last}}</h2>
            </div>

            {% for compo in journee %}
                <div class="cadre center">
                    <div class="row">
                        <h5 class="col s2">Equipe n°{{ compo.idEquipe }}</h5>
                        <h5 class="col s3">Journée n°{{ compo.idJournee.nJournee }}</h5>
                        <h5 class="col s3">{{ compo.idJournee.date | date("m/d/Y")}}</h5>
                        <h5 class="col s4">{{ compo.idJournee.lieu }}</h5>
                    </div>

                    <div class="row">
                        <div class="col s9">
                            <table class="centered">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Composition</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td><b>#1</b></td>
                                    <td>
                                        {% if compo.idJoueur1 is not null %}
                                            {{ compo.idJoueur1.nom }} {% if compo.idJoueur1.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                        {% endif %}
                                    </td>
                                </tr>

                                <tr>
                                    <td><b>#2</b></td>
                                    <td>
                                        {% if compo.idJoueur2 is not null %}
                                            {{ compo.idJoueur2.nom }} {% if compo.idJoueur2.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                        {% endif %}
                                    </td>
                                </tr>

                                <tr>
                                    <td><b>#3</b></td>
                                    <td>
                                        {% if compo.idJoueur3 is not null %}
                                            {{ compo.idJoueur3.nom }} {% if compo.idJoueur3.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                        {% endif %}
                                    </td>
                                </tr>

                                <tr>
                                    <td><b>#4</b></td>
                                    <td>
                                        {% if compo.idJoueur4 is not null %}
                                            {{ compo.idJoueur4.nom }} {% if compo.idJoueur4.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                        {% endif %}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        {% if compo.idEquipe != 1 %}
                            <div class="col s3">
                                <table class="centered">
                                    <thead>
                                    <tr>
                                        <th>Joueurs brûlés</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>
                                            {% if compo.idJoueur1 is not null %}
                                                {{ compo.idJoueur1.nom }} {% if compo.idJoueur1.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            {% if compo.idJoueur2 is not null %}
                                                {{ compo.idJoueur2.nom }} {% if compo.idJoueur2.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            {% if compo.idJoueur3 is not null %}
                                                {{ compo.idJoueur3.nom }} {% if compo.idJoueur3.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>
                                            {% if compo.idJoueur4 is not null %}
                                                {{ compo.idJoueur4.nom }} {% if compo.idJoueur4.role == "C" %}<span class="new badge red" data-badge-caption="Capitaine"></span>{% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>

                    <a href="{{ path('journee.edit', {id: compo.id}) }}"
                       class="btn waves-effect waves-light blue lighten-2">Modifier la compo<i class="material-icons">edit</i>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="col s2">
            <table class="centered cadre dispos">
                <thead>
                    <tr>
                        <th>Les dispos</th>
                    </tr>
                </thead>

                <tbody>
                <tr>
                    <td>Alvin</td>
                </tr>
                <tr>
                    <td>Stephen</td>
                </tr>
                <tr>
                    <td>Théo</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
