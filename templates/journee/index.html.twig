{% extends 'base.html.twig' %}
{% import 'macros/flash.html.twig' as _flash %}
{% import 'macros/composition.html.twig' as _composition %}
{% import 'macros/actualite.html.twig' as _actualite %}
{% import 'macros/brulages.html.twig' as _brulage %}
{% import 'macros/disponibilites.html.twig' as _disponibilites %}
{% import 'macros/classement.poule.html.twig' as _poule %}

{% block title %}Journee {{ journee.idJournee}} - {{ journee.type }}{% endblock %}

{% block body %}

    <header>
        {% include("components/navbar.html.twig") %}
    </header>

    <div class="row main">
        <div class="col l3 brulages_large">
            {{ _brulage.table(journee.linkType, competiteurs) }}
        </div>

        <div class="col s12 m7">
            {% for message in app.flashes('success') %}
                {{ _flash.success(message) }}
            {% endfor %}

            {% for message in app.flashes('fail') %}
                {{ _flash.fail(message) }}
            {% endfor %}

            {% for message in app.flashes('warning') %}
                {{ _flash.warning(message) }}
            {% endfor %}

            <div class="card-panel center-align white-text title_journee">
                <h4>Journée {{ journee.idJournee }} - {{ journee.type }}</h4>
                <h5>{{ journee.date|format_datetime('long', 'none', locale='fr') }}</h5>
            </div>

            <div class="card-panel center">
                <h5>{{ app.user.username | capitalize }}, êtes-vous disponible pour cette journée ?</h5>

                {% if journee.linkType == 'departementale' %}
                    {% set dispoJournee = app.user.disposDepartementales %}
                {% elseif journee.linkType == 'paris' %}
                    {% set dispoJournee = app.user.disposParis %}
                {% endif %}

                {% if journee.idJournee in dispoJournee|keys %}
                    {% if dispoJournee[journee.idJournee] %}
                        <p><i>Vous vous êtes inscrit comme étant </i><span class="green-text lighten-3"><b>disponible</b></span></p>
                        <a href="{{ path('journee.disponibilite.update', {journee: journee.idJournee, type: journee.linkType, disposJoueur: disposJoueur.idDisponibilite, dispo: 0}) }}">
                            <button class="btn btn_form waves-effect red lighten-2 waves-light" type="submit" name="action">Se déclarer indisponible</button>
                        </a>
                    {% else %}
                        <p><i>Vous vous êtes inscrit comme étant </i><span class="red-text lighten-3"><b>indisponible</b></span></p>
                        <a href="{{ path('journee.disponibilite.update', {journee: journee.idJournee, type: journee.linkType, disposJoueur: disposJoueur.idDisponibilite, dispo: 1}) }}">
                            <button class="btn btn_form waves-effect green lighten-2 waves-light" type="submit" name="action">Se déclarer disponible</button>
                        </a>
                    {% endif %}
                {% else %}
                    <p><i>Vous n'avez pas encore signalé votre disponibilité</i></p>
                    <div class="row">
                        <div class="col s6">
                            <a href="{{ path('journee.disponibilite.new', {journee: journee.idJournee, type: journee.linkType, dispo: 1}) }}">
                                <button class="btn btn_form waves-effect green lighten-2 waves-light" type="submit" name="action">Disponible</button>
                            </a>
                        </div>
                        <div class="col s6">
                            <a href="{{ path('journee.disponibilite.new', {journee: journee.idJournee, type: journee.linkType, dispo: 0}) }}">
                                <button class="btn btn_form waves-effect red lighten-2 waves-light" type="submit" name="action">Indisponible</button>
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>

            {% for compo in compos %}

                <div class="center card-panel">
                    <div class="row header_compo">

                        {% if compo.hosted %}<span style="margin-top: 0; margin-bottom: 4px;" class="col s12 orange-text lighten-2"><i class="material-icons">error_outline</i><b>Salle indisponible : rencontre à Herblay</b></span>{% endif %}

                        <div class="row hide-on-med-and-up">
                            <div class="col s9 {% if journee.linkType == 'departementale' %}m5{% else %}m4{% endif%} nom_adversaire">
                                <h5><i class="red-text darken-2 material-icons">place</i>{{ compo.adversaire }}</h5>
                            </div>

                            <div class="col s3">
                                <a style="width: 100%; margin-bottom: 0; margin-top: 10px;" class="card-panel modal-trigger waves-effect waves-block btn black-text blue lighten-3" href="#classement"><i class="material-icons">equalizer</i></a>
                            </div>
                        </div>

                        <div class="col {% if journee.linkType == 'departementale' %}s4 m2{% else %}s6 m2{% endif %}">
                            <h5>
                                <span class="white-text bulle">{{ compo.idEquipe.division }}</span><br>
                            </h5>
                            <p class="poule">Poule {{ compo.idEquipe.poule }}</p>
                        </div>

                        {% if journee.linkType == 'departementale' %}<h5 class="col s4 m3">Équipe {{ compo.idEquipe.idEquipe }}</h5>{% endif %}

                        <h5 class="col {% if journee.linkType == 'departementale' %}s4 m1{% else %}s6 m1{% endif %}">
                            {% if compo.domicile%} <i style="font-size: 2.1rem;" class="{% if compo.hosted %}orange-text lighten-2{% else %}green-text{% endif%} darken-4 material-icons">home</i>
                            {% else%} <i style="font-size: 2.1rem;" class="green-text darken-4 material-icons">directions_car</i>
                            {% endif %}
                        </h5>

                        <div class="col s12 {% if journee.linkType == 'departementale' %}m5{% else %}m4{% endif%} nom_adversaire hide-on-small-only">
                            <h5><i class="red-text darken-2 material-icons">place</i>{{ compo.adversaire }}</h5>
                        </div>

                        <div class="hide-on-small-only col m1">
                            <a style="width: 100%; margin-bottom: 0; margin-top: 10px;" class="card-panel modal-trigger waves-effect waves-block btn black-text blue lighten-3" href="#classement"><i class="material-icons">equalizer</i></a>
                        </div>

                        <div id="classement" class="modal modal-fixed-footer">
                            <div class="modal-content">
                                {{ _poule.classement(classement) }}
                            </div>
                            <div class="modal-footer">
                                <a href="#!" class="modal-close btn waves-effect waves-light blue lighten-2">OK</a>
                            </div>
                        </div>
                    </div>

                    <table class="striped responsive-table">
                        <tbody>
                        {{ _composition.tr("1", compo.idJoueur1) }}
                        {{ _composition.tr("2", compo.idJoueur2) }}
                        {{ _composition.tr("3", compo.idJoueur3) }}

                        {% if compo.idEquipe.idEquipe == 1 and compo.idJournee.linkType == 'paris' %}
                        </tbody>
                    </table>
                    <br><div class="divider"></div><br>
                    <table class="striped responsive-table">
                        <tbody>
                        {% endif %}

                        {% if (journee.linkType == 'departementale') or (journee.linkType == 'paris' and compo.idEquipe.idEquipe == 1) %}
                            {{ _composition.tr("4", compo.idJoueur4) }}
                        {% endif %}

                        {% if journee.linkType == 'paris' and compo.idEquipe.idEquipe == 1 %}
                        {{ _composition.tr("5", compo.idJoueur5) }}
                        {{ _composition.tr("6", compo.idJoueur6) }}

                        {% if compo.idEquipe.idEquipe == 1 and compo.idJournee.linkType == 'paris' %}
                        </tbody>
                    </table>
                    <br><div class="divider"></div><br>
                    <table class="striped responsive-table">
                        <tbody>
                        {% endif %}

                        {{ _composition.tr("7", compo.idJoueur7) }}
                        {{ _composition.tr("8", compo.idJoueur8) }}
                        {{ _composition.tr("9", compo.idJoueur9) }}

                        {% endif %}
                        </tbody>
                    </table>

                    {% if 'ROLE_CAPITAINE' in app.token.roleNames %}
                        <a href="{{ path('composition.edit', {type: journee.linkType, compo: compo.id}) }}"
                            {% if journee.linkType == 'departementale' %}
                                {% if compo.isEmpty %}
                                    class="btn waves-effect waves-light green lighten-2">
                                    Créer la compo
                                {% else %}
                                    class="btn waves-effect waves-light blue lighten-2">
                                    Modifier la compo
                                {% endif %}
                            {% elseif journee.linkType == 'paris' %}
                                {% if compo.isEmptyHaut or compo.isEmptyBas %}
                                    class="btn waves-effect waves-light green lighten-2">
                                    Créer la compo
                                {% else %}
                                    class="btn waves-effect waves-light blue lighten-2">
                                    Modifier la compo
                                {% endif %}
                            {% endif %}
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>

        <div class="col s12 show-on-small" hidden>
            {{ _brulage.table(journee.linkType, competiteurs) }}
        </div>

        <div class="col s12 m2">
            {{ _disponibilites.table(joueursNonDeclares, selectedPlayers, dispos, allDisponibilitesDepartementales, allDisponibiliteParis) }}
        </div>
    </div>

    {# <div class="row">
        <div class="container">
            <div class="center-align white-text">
                <h4>Les actualités FFTT</h4>
            </div>
        </div>

        {% for actu in actualites %}
            {{ _actualite.actualite(actu.date, actu.titre, actu.description, actu.url, actu.photo, actu.categorie) }}
        {% endfor %}
    </div> #}

    <script>
        $(window).ready(function() {
            if ($(window).width() <= 600) $('.main').addClass("container");
            else $('.main').removeClass("container");
        });
    </script>

{% endblock %}
