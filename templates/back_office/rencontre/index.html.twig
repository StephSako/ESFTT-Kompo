{% extends 'base.html.twig' %}

{% block title %}Back office - Les rencontres{% endblock %}
{% import 'macros/flash.html.twig' as flash %}

{% block body %}

    {{ include("components/navbar_backoffice.html.twig") }}

    <div class="container">

        {% for message in app.flashes('success') %}
            {{ flash.success(message) }}
        {% endfor %}

        {% for message in app.flashes('fail') %}
            {{ flash.fail(message) }}
        {% endfor %}

        <ul class="tabs tabs-fixed-width tab-demo z-depth-1">
            <li class="tab"><a href="#journees_departementales" class="active">Les rencontres départementales</a></li>
            <li class="tab"><a href="#journees_paris">Les rencontres de Paris</a></li>
        </ul>

        <div class="card-panel center" id="journees_departementales">
            <table class="striped centered">
                <thead>
                <tr>
                    <th><h5>Equipe n°</h5></th>
                    <th><h5>Journée n°</h5></th>
                    <th><h5>Date</h5></th>
                    <th><h5>Adversaire</h5></th>
                    <th><h5>Lieu</h5></th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for rencontre in rencontreDepartementales %}
                    <tr>
                        <td>{{ rencontre.idEquipe.idEquipe }}</td>
                        <td>{{ rencontre.idJournee.idJournee }}</td>
                        <td>{{ rencontre.idJournee.date|format_datetime('long', 'none', locale='fr') }}</td>
                        <td>{{ rencontre.adversaire }}</td>
                        <td>
                            {% if rencontre.domicile%} <i style="font-size: 2.1rem;" class="material-icons">home</i>
                            {% else%} <i style="font-size: 2.1rem;" class="material-icons">directions_car</i>
                            {% endif %}
                        </td>
                        <td><a href="{{ path('backoffice.rencontre.edit', {idRencontre: rencontre.id, type: 'departementale'}) }}" class="btn waves-effect waves-light blue lighten-2"><i class="material-icons">edit</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="card-panel center" id="journees_paris">
            <table class="striped centered">
                <thead>
                <tr>
                    <th><h5>Equipe n°</h5></th>
                    <th><h5>Journée n°</h5></th>
                    <th><h5>Date</h5></th>
                    <th><h5>Adversaire</h5></th>
                    <th><h5>Lieu</h5></th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for rencontre in rencontreParis %}
                    <tr>
                        <td>{{ rencontre.idEquipe.idEquipe }}</td>
                        <td>{{ rencontre.idJournee.idJournee }}</td>
                        <td>{{ rencontre.idJournee.date|format_datetime('long', 'none', locale='fr') }}</td>
                        <td>{{ rencontre.adversaire }}</td>
                        <td>
                            {% if rencontre.domicile%} <i style="font-size: 2.1rem;" class="material-icons">home</i>
                            {% else%} <i style="font-size: 2.1rem;" class="material-icons">directions_car</i>
                            {% endif %}
                        </td>
                        <td><a href="{{ path('backoffice.rencontre.edit', {idRencontre: rencontre.id, type: 'paris'}) }}" class="btn waves-effect waves-light blue lighten-2"><i class="material-icons">edit</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}