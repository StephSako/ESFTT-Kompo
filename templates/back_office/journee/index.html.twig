{% extends 'base.html.twig' %}

{% block title %}Back office - La phase{% endblock %}
{% import 'macros/flash.html.twig' as flash %}

{% block body %}

    {{ include("components/navbar_backoffice.html.twig") }}

    <div class="container">

        {% for message in app.flashes('success') %}
            {{ flash.success(message) }}
        {% endfor %}

        {% for message in app.flashes('fail') %}
            {{ flash.fail(message) }}
        {% endfor %}

        <ul class="tabs tabs-fixed-width tab-demo z-depth-1">
            <li class="tab"><a href="#journees_departementales" class="active">Les journées en départemental</a></li>
            <li class="tab"><a href="#journees_paris">Les journées de Paris</a></li>
        </ul>

        <div class="card-panel center" id="journees_departementales">
            <table class="striped centered">
                <thead>
                <tr>
                    <th><h5>Journée</h5></th>
                    <th><h5>Date</h5></th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for journee in journeeDepartementales %}
                    <tr>
                        <td>{{ journee.idJournee }}</td>
                        <td>{{ journee.date|format_datetime('long', 'none', locale='fr') }}</td>
                        <td><a href="{{ path('backoffice.phase.edit', {idJournee: journee.idJournee, type: 'departementale'}) }}" class="btn waves-effect waves-light blue lighten-2"><i class="material-icons">edit</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="card-panel center" id="journees_paris">
            <table class="striped centered">
                <thead>
                <tr>
                    <th><h5>Journée</h5></th>
                    <th><h5>Date</h5></th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for journee in journeeParis %}
                    <tr>
                        <td>{{ journee.idJournee }}</td>
                        <td>{{ journee.date|format_datetime('long', 'none', locale='fr') }}</td>
                        <td><a href="{{ path('backoffice.phase.edit', {idJournee: journee.idJournee, type: 'paris'}) }}" class="btn waves-effect waves-light blue lighten-2"><i class="material-icons">edit</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}