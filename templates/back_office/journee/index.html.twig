{% extends 'base.html.twig' %}

{% block title %}Back office - La phase{% endblock %}
{% import 'macros/flash.html.twig' as _flash %}

{% block body %}

    {{ include("components/navbar_backoffice.html.twig") }}

    <div class="container">

        {% for message in app.flashes('success') %}
            {{ _flash.message(message, 'green') }}
        {% endfor %}

        {% for message in app.flashes('fail') %}
            {{ _flash.message(message, 'red') }}
        {% endfor %}

        <div class="card-panel center-align white-text title_journee">
            <h4>Les dates de la phase</h4>
        </div>

        <ul class="tabs tabs-fixed-width tab-demo z-depth-1">
            <li class="tab"><a href="#journees_departementales" class="active">Départemental</a></li>
            <li class="tab"><a href="#journees_paris">Paris</a></li>
        </ul>

        <div class="card-panel" id="journees_departementales">
            <table class="striped centered">
                <thead>
                    <tr>
                        <th>Journée n°</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                {% for journee in journeeDepartementales %}
                    <tr>
                        <td><b>{{ journee.idJournee }}</b></td>
                        <td>{{ journee.date|format_datetime('long', 'none', locale='fr') }}</td>
                        <td><a href="{{ path('backoffice.phase.edit', {idJournee: journee.idJournee, type: 'departementale'}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion"><i class="material-icons">edit</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="card-panel" id="journees_paris">
            <table class="striped centered">
                <thead>
                    <tr>
                        <th>Journée n°</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                {% for journee in journeeParis %}
                    <tr>
                        <td><b>{{ journee.idJournee }}</b></td>
                        <td>{{ journee.date|format_datetime('long', 'none', locale='fr') }}</td>
                        <td><a href="{{ path('backoffice.phase.edit', {idJournee: journee.idJournee, type: 'paris'}) }}" class="btn waves-effect waves-light blue lighten-2 btn_gestion"><i class="material-icons">edit</i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}