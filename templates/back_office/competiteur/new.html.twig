{% extends 'base.html.twig' %}

{% block title %}Back office - Les compétiteurs{% endblock %}
{% import 'macros/flash.html.twig' as flash %}
{% import 'macros/edit/account.html.twig' as edit_account %}
{% form_theme form 'components/materialize_form_theme.html.twig' %}

{% block body %}

    {{ include("components/navbar_backoffice.html.twig") }}

    <div class="container">
        {% for message in app.flashes('success') %}
            {{ flash.message(message, 'green') }}
        {% endfor %}

        {% for message in app.flashes('fail') %}
            {{ flash.message(message, 'red') }}
        {% endfor %}

        {{ form_errors(form) }}

        {{ edit_account.edit_account('backoffice', 'Créer un compétiteur', form, 'https://cdn1.iconfinder.com/data/icons/ui-next-2020-shopping-and-e-commerce-1/12/75_user-circle-512.png', 'Créer') }}
    </div>

{% endblock %}