{% if app.session.get('type') is not null %}
    {% set type = app.session.get('type') %}
{% else %}
    {% set type = 'departementale' %}
{% endif %}

<div class="navbar-fixed">
    <nav class="nav-extended">
        <div class="nav-wrapper">
            <a href="#" class="brand-logo hide-on-med-and-up"><img width="100%" src="https://www.esftt.com/images/logo-new.png" alt="logo ESFTT"></a>
            <a href="#" data-target="slide-out" class="sidenav-trigger"><i class="material-icons">menu</i></a>

            <ul class="left hide-on-med-and-down">
                <li class="waves-light waves-effect li_in_line {% if app.request.getPathInfo starts with '/backoffice/rencontre' %}active blue darken-3{% endif %}">
                    <a class="white-text" href="{{ path("back_office.rencontres") }}"><i class="material-icons left">tonality</i>Rencontres</a>
                </li>
                <li class="waves-light waves-effect li_in_line {% if app.request.getPathInfo starts with '/backoffice/phase' %}active blue darken-3{% endif %}">
